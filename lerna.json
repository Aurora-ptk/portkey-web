{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "1.0.0-alpha.0",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "changelogPreset": {
    "name": "conventionalcommits",
    "commitUrlFormat": "github.com/{{owner}}/{{repository}}/commit/{{hash}}",
    "compareUrlFormat": "github.com/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "github.com/{{owner}}/{{repository}}/issues/{{id}}"
  }
}
